<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceHelperApp.Views.AboutPage"
             xmlns:vm="clr-namespace:FinanceHelperApp.ViewModels"
             Title="{Binding Title}"
             xmlns:converters="clr-namespace:FinanceHelperApp.Converters">

    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
            <converters:NullToBooleanConverter x:Key="NullToBooleanConverter" />
            <converters:NullToBooleanConverter x:Key="MediaFileToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView Grid.Row="0">
            <StackLayout Orientation="Vertical" Padding="30,24,30,24" Spacing="10">
                <Button Margin="0,10,0,0" Text="Select File"
                        Command="{Binding LoadImageCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />
                <Label FontSize="16" Padding="0,24,0,0">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="{Binding FilePath}"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Button Margin="0,10,0,0" Text="Take a Photo"
                        Command="{Binding TakePhotoCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />
                <Image  Source="icon_about"
                        IsVisible="{Binding MediaFile, Converter={StaticResource NullToBooleanConverter}, ConverterParameter=Inverse}"/>
                <Button Margin="0,10,0,0" Text="Detect Text"
                        Command="{Binding DetectTextCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White" />
                <Label FontSize="16" Padding="0,24,0,0">
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="{Binding DetectedText}"/>
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </StackLayout>
        </ScrollView>
    </Grid>


</ContentPage>
